<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_login"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back_main"
            android:layout_marginStart="20dp"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@mipmap/back_while_one" />

        <TextView
            android:id="@+id/sign_up"
            android:text="注册"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textColor="@color/pure_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_below="@+id/top_login"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/username"/>

                <EditText
                    android:textSize="15sp"
                    android:id="@+id/username"
                    android:background="@null"
                    android:hint="用户名/邮箱"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorGrey200"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/card_ph_pw"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/password"/>

                <EditText
                    android:textSize="15sp"
                    android:id="@+id/password"
                    android:background="@null"
                    android:hint="密码"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/send"
                    android:visibility="gone"
                    android:layout_width="90dp"
                    android:text="发送验证码"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/but_login"
        android:layout_below="@+id/card"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <LinearLayout
            android:id="@+id/login"
            android:gravity="center"
            android:padding="1dp"
            android:background="@drawable/login_button"
            android:layout_width="200dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="2dip"
                android:text="Login"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                android:visibility="gone"
                style="@style/SpinKitView.Large.DoubleBounce"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/pure_white" />

            <com.cat.login.View.TickView
                android:visibility="gone"
                android:id="@+id/tickView"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/pw_ph"
            android:gravity="center"
            android:padding="1dp"
            android:background="@drawable/login_button"
            android:layout_width="50dp"
            android:layout_marginRight="40dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pw_ph_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ph_write"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq"
            android:gravity="center"
            android:padding="1dp"
            android:background="@drawable/login_button"
            android:layout_width="50dp"
            android:layout_marginRight="40dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/qq"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget"
            android:gravity="center"
            android:padding="1dp"
            android:background="@drawable/login_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/forget"/>

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/forget"-->
<!--            android:text="忘记密码"-->
<!--            android:textSize="18sp"-->
<!--            android:autoLink="all"-->
<!--            android:textColor="@color/pure_white"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->

    </LinearLayout>

</RelativeLayout>